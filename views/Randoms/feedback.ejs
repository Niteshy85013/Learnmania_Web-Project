<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>



<!-- {{!-- Feedback Section --}} -->

<section id="feedback-form">

    <div class="container mt-5 shadow-lg p-3 mb-4 rounded ">
        <div class="row ">
            <h1 class="text-center">Send Us Feedback</h1>

            <div class="col-md-6 mt-3">
                <img src="/static/images/feedback.png" alt="" class="mt-5 ms-5 img-fluid" style="max-height:400px;" />
            </div>

            <div class="col-md-6 mt-5">

                <div class="card   mt-3">
                    <div class="card-body ">

                        <form action="/feedback-form" method="POST" autocomplete="off">

                            <label class="mt-2 fs-5 ">Fullname</label>
                            <input type="text" class="form-control" name="Fullname" placeholder="Full Name" required />

                            <label class="mt-2 fs-5 ">Rate our Courses</label>
                            <input type="text" class="form-control " name="Course_Rating"
                                placeholder="Bad, Average, Good" required />


                            <label class="mt-2 fs-5 ">Rate our UI</label>
                            <input type="text" class="form-control " name="UI_Rating" placeholder="Bad, Average, Good"
                                required />

                            <label class="mt-2 fs-5 ">Rate our Features</label>
                            <input type="text" class="form-control " name="Feature_Rating"
                                placeholder="Bad, Average, Good" required />


                            <label class="mt-2 fs-5 ">Feedback about...</label>
                            <textarea class="form-control" placeholder="Leave a feedback here" name="desc"
                                style="height: 100px" required></textarea>

                            <button type="submit" class="btn btn-success text-center mt-4 ">Submit</button>
                        </form>

                    </div>

                </div>
            </div>


        </div>
    </div>

</section>
<!-- {{!-- Feedback sections End--}} -->